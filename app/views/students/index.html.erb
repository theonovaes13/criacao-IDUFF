

<h1>Students</h1>

<table>
  <thead>
  <tr>
    <th>Nome</th>
    <th>Matricula</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @student.each do |student| %>
    <tr>
      <td><%= student.nome %></td>
      <td><%= student.matricula %></td>
      <td><%= student.email %></td>
      <td><%= link_to 'Show', student %></td>
      <td><%= link_to 'Edit', edit_student_path(student) %></td>
      <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
